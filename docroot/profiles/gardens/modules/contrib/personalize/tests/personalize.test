    // Although it issues a warning, it should still allow the feature to be mapped
    // to different options.
    $expected_targeting['option-B']['fixed_targeting'] = array('test_user_field--ss-first-value');
    $expected_targeting['option-B']['fixed_targeting_rules'] = array(
      'test_user_field--ss-first-value' => array(
        'context' => 'test_user_field',
        'match' => 'first value',
        'operator' => 'starts',
      ),
    );

    $this->assertExplicitTargeting($option_set, $expected_targeting);

    // Now let's uncheck "enable_explicit_targeting" for first option and put the third option
    // back to using "third_value".
    $edit['option_sets[option_set_1][options][option-A][enable_explicit_targeting]'] = FALSE;

    $this->drupalPost("admin/structure/personalize/manage/$machine_name/edit", $edit, $this->getButton('option'));
    $this->resetAll();
    $option_set = personalize_option_set_load(1);

    $expected_targeting['option-A']['fixed_targeting'] = $expected_targeting['option-A']['fixed_targeting_rules'] = array();
    $expected_targeting['option-A']['fixed_targeting_strategy'] = 'OR';

    $this->assertExplicitTargeting($option_set, $expected_targeting);

    // Since we couldn't test much using the form, let's mock some form values getting
    // sent to the submit function and assert the correct explicit targeting settings.
    module_load_include('inc', 'personalize', 'personalize.admin');
    $form_state = array(
      'values' => array(
        'agent' => $machine_name,
        'option_sets' => array(
          'option_set_2' => array(
            'winner' => 'option-A',
            'advanced' => array(
              'label' => $this->randomName(),
              'stateful' => 0,
            ),
            'options' => array(
              'option-A' => array(
                'explicit_targeting' => array(
                  'mapping' => array(
                    'contexts' => array(
                      array(
                        'context' => 'test_user_field',
                        'value' => array('match' => 'some value', 'operator' => 'contains'),
                      ),
                      array(
                        'context' => 'test_user_field',
                        'value' => array('match' => 'other value', 'operator' => 'starts'),
                      )
                    )
                  ),
                  'strategy' => 'OR',
                )
              ),
              'option-B' => array(
                'explicit_targeting' => array(
                  'mapping' => array(
                    'contexts' => array(
                      array(
                        'context' => 'test_user_field',
                        'value' => array('match' => 'ohai', 'operator' => 'starts'),
                      ),
                      array(
                        'context' => 'test_user_field',
                        'value' => array('match' => 'kthxbai', 'operator' => 'ends'),
                      )
                    )
                  ),
                  'strategy' => 'AND',
                )
              ),
            )
          )
        )
      )
    );
    personalize_agent_option_sets_form_submit(array(), $form_state);
    $option_set = personalize_option_set_load(2, TRUE);
    $expected_targeting_osid2 = array(
      'option-A' => array(
        'fixed_targeting' => array('test_user_field--sc-some-value', 'test_user_field--ss-other-value'),
        'fixed_targeting_rules' => array(
          'test_user_field--sc-some-value' => array(
            'context' => 'test_user_field',
            'match' => 'some value',
            'operator' => 'contains',
          ),
          'test_user_field--ss-other-value' => array(
            'context' => 'test_user_field',
            'match' => 'other value',
            'operator' => 'starts',
          ),
        ),
        'fixed_targeting_strategy' => 'OR'
      ),
      'option-B' => array(
        'fixed_targeting' => array('test_user_field--ss-ohai', 'test_user_field--se-kthxbai'),
        'fixed_targeting_rules' => array(
          'test_user_field--ss-ohai' => array(
            'context' => 'test_user_field',
            'match' => 'ohai',
            'operator' => 'starts',
          ),
          'test_user_field--se-kthxbai' => array(
            'context' => 'test_user_field',
            'match' => 'kthxbai',
            'operator' => 'ends',
          ),
        ),
        'fixed_targeting_strategy' => 'AND'
      ),
    );
    $this->assertExplicitTargeting($option_set, $expected_targeting_osid2);

    // Now let's place the blocks in a region and make sure the correct js settings
    // show up when they're rendered.
    $edit = array();
    $edit['blocks[personalize_blocks_1][region]'] = 'sidebar_first';
    $edit['blocks[personalize_blocks_2][region]'] = 'sidebar_first';
    $this->drupalPost('admin/structure/block', $edit, t('Save blocks'));
    $this->drupalGet('');
    $settings = $this->drupalGetSettings();
    $option_set_settings = $settings['personalize']['option_sets'];
    // CHeck the fixed targeting on the first option set.
    $this->assertEqual(array(), $option_set_settings['osid-1']['options'][0]['fixed_targeting']);
    $this->assertEqual(array(), $option_set_settings['osid-1']['options'][0]['fixed_targeting_rules']);
    $this->assertEqual($expected_targeting['option-B']['fixed_targeting'], $option_set_settings['osid-1']['options'][1]['fixed_targeting']);
    $this->assertEqual($expected_targeting['option-B']['fixed_targeting_rules'], $option_set_settings['osid-1']['options'][1]['fixed_targeting_rules']);

    // Now check the fixed targeting on the set that was submitted directly
    // to the submit function, which has multiple features per option.
    $this->assertEqual($expected_targeting_osid2['option-A']['fixed_targeting'], $option_set_settings['osid-2']['options'][0]['fixed_targeting']);
    $this->assertEqual($expected_targeting_osid2['option-A']['fixed_targeting_rules'], $option_set_settings['osid-2']['options'][0]['fixed_targeting_rules']);
    $this->assertEqual($expected_targeting_osid2['option-A']['fixed_targeting_strategy'], $option_set_settings['osid-2']['options'][0]['fixed_targeting_strategy']);

    $this->assertEqual($expected_targeting_osid2['option-B']['fixed_targeting'], $option_set_settings['osid-2']['options'][1]['fixed_targeting']);
    $this->assertEqual($expected_targeting_osid2['option-B']['fixed_targeting_rules'], $option_set_settings['osid-2']['options'][1]['fixed_targeting_rules']);
    $this->assertEqual($expected_targeting_osid2['option-B']['fixed_targeting_strategy'], $option_set_settings['osid-2']['options'][1]['fixed_targeting_strategy']);
  }
}

/**
 * Tests set requirements for personalization functionality.
 */
class PersonalizeRequirementsTest extends PersonalizeBaseTest {

  public static function getInfo() {
    return array(
      'name' => t('Personalize Requirements'),
      'description' => t('Tests personalize requirements.'),
      'group' => t('Personalize'),
    );
  }

  function setUp() {
    parent::setUp(array('ctools', 'personalize', 'personalize_blocks'));
  }

  /**
   * Tests creating a new campaign.
   */
  function testCampaignCreate() {
    $admin_user = $this->drupalCreateUser(array('access administration pages', 'manage personalized content'));
    $this->drupalLogin($admin_user);

    // Make sure you can't create a campaign without any agents.
    $this->drupalGet('admin/structure/personalize/add');
    $this->assertText(t('You don\'t have any agent types enabled.'));
    $this->assertNoFieldByName('op', $this->getButton('agent'));

    // Enable a test agent and verify that a campaign edit form is presented.
    module_enable(array('personalize_test'));
    $agent = personalize_agent_load_agent('test-agent');
    $this->assertTrue($agent instanceof PersonalizeAgentBase);
    $this->drupalGet('admin/structure/personalize/add');
    $this->assertNoText(t('You don\'t have any agent types enabled.'));
    $this->assertFieldByName('op', $this->getButton('agent'));
  }
}
