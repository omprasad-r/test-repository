  /**
   * Site template preparation callback for the "Comment" feature.
   */
  public function site_template_comment_feature_install_prepare(&$data, $features) {
    // Define a block showing recent comments.
    $data['block_data'] = array(
      'module' => 'comment',
      'delta' => 'recent',
