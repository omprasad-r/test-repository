    // Delete the block.
    if (isset($data['block'])) {
      site_template_disable_block($data['block']);
    }

    // Delete the feed.
    aggregator_save_feed(array('fid' => $data['fid']));

    // Disable the module.
    module_disable(array('aggregator'), FALSE);
  }

