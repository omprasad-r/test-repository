        WATCHDOG_EMERGENCY => 1,
        WATCHDOG_ALERT => 1,
        WATCHDOG_CRITICAL => 1,
        WATCHDOG_ERROR => 1,
        WATCHDOG_WARNING => 1,
        WATCHDOG_NOTICE => 1,
        WATCHDOG_INFO => 1,
        WATCHDOG_DEBUG => 1,
      );
      variable_set('syslog_advanced_allowed', $allowed);
    }
    if (variable_get('syslog_advanced_identity') === NULL) {
      variable_set('syslog_advanced_identity', variable_get('syslog_identity', 'drupal'));
    }
    if (variable_get('syslog_advanced_facility') === NULL) {
      variable_set('syslog_advanced_facility', variable_get('syslog_facility', defined('LOG_LOCAL0') ? LOG_LOCAL0 : LOG_USER));
    }
